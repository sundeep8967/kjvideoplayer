<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Main Player View -->
    <androidx.media3.ui.PlayerView
        android:id="@+id/player_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000" />

    <!-- Volume Gesture Layout -->
    <LinearLayout
        android:id="@+id/volume_gesture_layout"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center_vertical"
        android:layout_marginEnd="32dp"
        android:background="@drawable/gesture_background"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/volume_image"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/ic_volume_up"
            android:tint="#FFFFFF" />

        <ProgressBar
            android:id="@+id/volume_progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="80dp"
            android:layout_height="4dp"
            android:layout_marginBottom="4dp"
            android:max="100"
            android:progressTint="#FF6B35" />

        <TextView
            android:id="@+id/volume_progress_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50%"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

    </LinearLayout>

    <!-- Brightness Gesture Layout -->
    <LinearLayout
        android:id="@+id/brightness_gesture_layout"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center_vertical"
        android:layout_marginStart="32dp"
        android:background="@drawable/gesture_background"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/brightness_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/ic_brightness_high"
            android:tint="#FFFFFF" />

        <ProgressBar
            android:id="@+id/brightness_progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="80dp"
            android:layout_height="4dp"
            android:layout_marginBottom="4dp"
            android:max="100"
            android:progressTint="#FF6B35" />

        <TextView
            android:id="@+id/brightness_progress_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50%"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

    </LinearLayout>

    <!-- Seek Gesture Layout -->
    <LinearLayout
        android:id="@+id/seek_gesture_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/gesture_background"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="16dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/seek_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_fast_forward"
            android:tint="#FFFFFF" />

        <TextView
            android:id="@+id/seek_progress_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Zoom Gesture Layout -->
    <LinearLayout
        android:id="@+id/zoom_gesture_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_marginTop="64dp"
        android:background="@drawable/gesture_background"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/zoom_progress_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zoom: 1.0x"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

</FrameLayout>